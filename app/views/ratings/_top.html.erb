<div class="span4">
  <h2>top <%= name %></h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>average</th>
      </tr>
    </thead>

    <tbody>
      <% items.each do |item| %>
        <tr>
          <td><%= link_to item, item %></td>
          <td><%= round item.average_rating %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
